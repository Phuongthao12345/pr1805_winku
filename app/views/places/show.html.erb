<div class="theme-layout">
  <section>
    <div class="ext-gap high-opacity">
      <div class="content-bg-wrap" style="background: url(http://res.cloudinary.com/thaophuong1997/image/upload/v1560236453/md1ix8eio99dtg7huuvz.jpg)"></div>
      <div class="container-fluid">
        <div class="row">
          <div class="col-lg-12">
            <div class="top-banner">
              <h1><b><%= @place.name %></b></h1>
              <nav class="breadcrumb">
                <%= link_to t("Home"), root_path, class: "breadcrumb-item" %>
                <span class="breadcrumb-item active"><%= @place.name %></span>
              </nav>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section>
    <div class="gap100 top">
      <div class="container">
        <div class="row remove-ext-40">
          <div class=" col-lg-12">
            <div class="personal">
              <h5 class="f-title"><i class="ti-info-alt"></i><%= t("Place_Info") %></h5>
              <p>
                <%= @place.detail %>
              </p>
            </div>
            <div class="section-heading">
              <h2><%= t("text.tour_newest") %></h2>
            </div>
            <div class="post-filter-sec">
              <%= search_form_for @q, url: place_path(@place), class: "filter-form" do |f| %>
                <%= f.search_field :title_or_time_or_vehicle_or_cost_cont, placeholder: t("Search_post"), type: "post" %>
                <button><i class="ti-search"></i></button>
              <% end %>
              <div class="purify">
                <span>filter by</span>
                <select style="display: none;">
                  <option>All categories</option>
                  <option>By Favouirtes</option>
                  <option>By Likes</option>
                </select>
                <select style="display: none;">
                  <option>Assending A-Z</option>
                  <option>Desending Z-A</option>
                  <option>Desending (date)</option>
                  <option>Asending (date)</option>
                </select>
                <a href="#" title="">purify</a>
              </div>
            </div>
          </div>
          <% if params[:q] %>
            <% if @tours_search.blank? %>
              <div class="col-lg-12" style="text-align: center;"><h5><%= t("Not_found")%></h5></div>
            <% else %>
              <% @tours_search.each do |tour| %>
                <div class="col-lg-4 col-sm-6">
                  <%= render "tours/tour", tour: tour %>
                </div>
              <% end %>
            <% end %>
          <% else %>
            <% @tours.each do |tour| %>
              <div class="col-lg-4 col-sm-6">
                <%= render "tours/tour", tour: tour %>
              </div>
            <% end %>
          <% end %>
          <div class="col-lg-12">
            <div class="section-heading">
              <h2><%= t("text.place_newest") %></h2>
            </div>
            <div class="row masonry" style="position: relative; height: 647.624px;">
              <% places_newest.each do |place| %>
                <div class="hand col-lg-3 col-sm-6" style="position: absolute; float: left; top: 0px;">
                  <div class="portfolio-box">
                    <%= image_tag place.image.image_link.to_s if place.image %>
                    <div class="overlinks">
                      <h4><%= link_to place.name, place_path(place) %></h4>
                      <ul class="cate">
                        <li><%= link_to "", "#" %></li>
                        <li><%= link_to "", "#" %></li>
                        <li><%= link_to "", "#" %></li>
                      </ul>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>

